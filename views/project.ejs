<%- include('partials/header', {username, role, title: 'Projects'}) %>

<div class="container">

  <h1>All Projects</h1>

  <table>
    <thead>
      <tr>
        <th>Key</th>
        <th>Summary</th>
        <!-- <th>Team Leader</th> -->
        <th>Status</th>
        <th>Created</th>
        <th>Time to resolution</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody>
      <% data.map(el => { %>
        <tr>
          <td>DEMO-<%= el.id %></td>
          <td><%= el.summary %></td>
          <td><%= el.status %></td>
          <td><%= el.getDate() %></td>
          <td style=<%= convertTime(new Date(el.target_resolution_time))[0] === '-' ? "color:red" : "color:blue"%>><%= convertTime(new Date(el.target_resolution_time)) %></td>
          <td>
            <div class="actions">

              <a href="/projects/edit/<%= el.id %> " class="button">Edit</a>
              <a href="/projects/teams/<%= el.id %>" class="button button-info">Assign Members</a>
            </div>
          </td>
        </tr>

      <% }) %>
    </tbody>
  </table>

</div>

<%- include('partials/footer') %>
